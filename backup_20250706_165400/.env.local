

# .env.local - APURAG Local Development Environment Configuration
# ===============================================================
# Optimized for fast startup, model caching, and development testing

# Environment Configuration
CUSTOMRAG_ENV=local

# Model Configuration - Optimized for local development
CUSTOMRAG_EMBEDDING_MODEL=BAAI/bge-base-en-v1.5
CUSTOMRAG_LLM_MODEL=qwen2.5:3b-instruct

# HuggingFace Optimization Settings
# These significantly reduce startup time by enabling proper caching
HF_HUB_DISABLE_TELEMETRY=1
HF_HUB_DISABLE_PROGRESS_BARS=1
HF_HUB_DISABLE_SYMLINKS_WARNING=1
HF_HOME=./model_cache/huggingface
TRANSFORMERS_VERBOSITY=error
TOKENIZERS_PARALLELISM=false

# Paths - relative for local development
CUSTOMRAG_DATA_PATH=./data
CUSTOMRAG_VECTOR_PATH=./vector_store

# Document Processing Settings - Optimized for speed
CUSTOMRAG_CHUNK_SIZE=400
CUSTOMRAG_CHUNK_OVERLAP=100

# Retrieval Settings - Balanced for local development
CUSTOMRAG_RETRIEVER_K=4
CUSTOMRAG_SEARCH_TYPE=hybrid
CUSTOMRAG_KEYWORD_RATIO=0.4
CUSTOMRAG_FAQ_MATCH_WEIGHT=0.5

# Query Processing - Reduced for faster local development
CUSTOMRAG_QUERY_EXPANSION=True
CUSTOMRAG_EXPANSION_FACTOR=2
CUSTOMRAG_MAX_CONTEXT_SIZE=3000
CUSTOMRAG_CONTEXT_COMPRESSION=True

# Resource Management - Conservative for local development
CUSTOMRAG_MAX_THREADS=2
CUSTOMRAG_MAX_MEMORY=2G

# Ollama Configuration
CUSTOMRAG_OLLAMA_URL=http://localhost:11434

# Logging - More verbose for development
CUSTOMRAG_LOG_LEVEL=INFO

# APU Filtering 
FILTER_APU_ONLY=True

# Force reindexing (set to True to rebuild vector store)
CUSTOMRAG_FORCE_REINDEX=False

# APU Knowledge Base Settings
CUSTOMRAG_APU_KB_ANSWER_SIZE=2
CUSTOMRAG_APU_KB_EXACT_MATCH_BOOST=2.0

# Development Model Management - More Frequent Testing
# ====================================================
# More frequent checks for development to test the system
CUSTOMRAG_MODEL_CHECK_INTERVAL_DAYS=7               # Check weekly in dev
CUSTOMRAG_MODEL_WARNING_AGE_DAYS=30                 # Warn after 1 month in dev
CUSTOMRAG_MODEL_CRITICAL_AGE_DAYS=60                # Critical after 2 months in dev
CUSTOMRAG_MODEL_AUTO_UPDATE_PROMPT=True             # Always prompt in dev
CUSTOMRAG_MODEL_UPDATE_CHECK_ENABLED=True           # Enable update checks
CUSTOMRAG_MODEL_REQUIRE_APPROVAL=True               # Still require approval

# Local-specific model settings
CUSTOMRAG_MODEL_CACHE_CLEANUP=False                 # Don't auto-cleanup in dev
CUSTOMRAG_MODEL_BACKUP_ENABLED=True                 # Enable backups
CUSTOMRAG_MODEL_MAX_BACKUPS=2                       # Fewer backups in dev
CUSTOMRAG_MODEL_NOTIFICATION_EMAIL=                 # No email notifications in dev

# Development Debugging and Testing
# =================================
# Enable additional debugging features for development
CUSTOMRAG_DEBUG_MODE=True
CUSTOMRAG_VERBOSE_STARTUP=True
CUSTOMRAG_PROFILE_PERFORMANCE=False
CUSTOMRAG_MOCK_SLOW_OPERATIONS=False